<aside class="col-md-3">
	<div class="panel panel-default">
		<div class="panel-body">
			<h5><%= @user.name %></h5>
			<%= image_tag(user_avatar(@user), class: "avatar-profile") %>
			<p><%= @user.blurb %></p>
			<p><strong>email:</strong><%= @user.email %></p>
			<p><strong>created: </strong> <%= time_ago_in_words(@user.created_at) %> ago</p>
		</div>
	</div>
</aside>