<% provide(:title, "Edit Account") %>

<h1>Edit Profile</h1>
<div class="row">
	<%= render 'profile_panel' %>
	<div class="col-md-6">
		<%= form_for @user, html: { multipart: true } do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.label "Profile Picture" %>
			<%= f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png' %>
			<%= f.label :blurb %> <small>(something about your eating/cooking habits)</small>
			<%= f.text_area :blurb, class: "form-control" %>
			<%= f.label :user_name %>
			<%= f.text_field :name, class: "form-control" %>
			<%= f.label :email %>
			<%= f.email_field :email, class: "form-control" %>
			<%= f.label :passworrd %> <small>(leave blank if not updating)</small>
			<%= f.password_field :password, class: "form-control" %>
			<%= f.label "Password confirmation" %>
			<%= f.password_field :password_confirmation, class: "form-control" %>
			<%= f.submit "Update", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>

<script type="text/javascript">
	$('#user_avatar').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 4) {
      alert('Maximum file size is 4MB. Please choose a smaller file.');
    }
  });
</script>