<div class="row">
	<%= form_for @user.kitchen.ingredients do |f| %>
		<%= f.label "Add ingredient to your kitchen" %>
		<%= f.text_field :ingredient, class: "form-control" %>
		<%= f.label "Quantity" %>
		<%= f.text_field :quantity, class: "form-control" %>
		<%= f.submit :submit, class: "btn btn-primary" %>
	<% end %>
</div>